<p id="notice"><%= notice %></p>

<h1>Users Listing</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.dob %></td>
        <td><%= User::GENDER_TYPES.select{|x| x == user.gender}[user.gender] %></td>
        <td><%= Role.find(user.role).name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
